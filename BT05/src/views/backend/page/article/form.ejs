<% 
const collection 			= 	'article'
const linkPrefix 			= 	`${prefixAdmin}/${collection}`
const linkThumb             =   '' ;
%>

    <div class="card card-info card-outline">
        <form action="/<%=linkPrefix%>/form/" method="POST" class="mb-0" enctype="multipart/form-data">
            <div class="card-body">
                <h1>
                    <%=formTitle %>
                </h1>
                <div class="form-group row">
                    <label for="title" class="col-sm-2 col-form-label text-sm-right required">Title</label>
                    <div class="col-xs-12 col-sm-8">
                        <input type="text" id="name-input-form" name="title" class="form-control form-control-sm"
                            value="<%= item.title %>">
                    </div>

                </div>
                <div class="form-group row" style="display: none;">
                    <label for="id" class="col-sm-2 col-form-label text-sm-right required">Id</label>
                    <div class="col-xs-12 col-sm-8">
                        <input type="text" id="id-input-form" name="id" class="form-control form-control-sm"
                            value="<%= item._id %>">
                    </div>

                </div>
                <div class="form-group row">
                    <label for="name" class="col-sm-2 col-form-label text-sm-right required">Ordering</label>
                    <div class="col-xs-12 col-sm-8">
                        <input type="text" name="ordering" class="form-control form-control-sm"
                            value="<%= item.ordering %>">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="name" class="col-sm-2 col-form-label text-sm-right required">Show on Home Page</label>
                    <div class="col-xs-12 col-sm-8">
                        <input type="text" name="isShowHome" class="form-control form-control-sm" value="<%= item.isShowHome %>">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="status" class="col-sm-2 col-form-label text-sm-right">Status</label>
                    <div class="col-xs-12 col-sm-8">
                        <select id="status" name="status" class="custom-select custom-select-sm">
                            <option value="novalue">Choose Status</option>
                            <option value="active" <% if (item.status=='active' ) { %>selected<% } %>>Active</option>
                            <option value="inactive" <% if (item.status=='inactive' ) { %>selected<% } %>>Inactive
                            </option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="description" class="col-sm-2 col-form-label text-sm-right required">Content</label>
                    <textarea name="description" id="editor" > <%= item.description %> </textarea>
                </div>
                <div class="form-group row">
                    <label for="image" class="col-sm-2 col-form-label text-sm-right required">Image</label>
                    <input type="file" name="image" />
                </div>
            <div class="card-footer">
                <div class="col-12 col-sm-8 offset-sm-2">
                    <button type="submit" class="btn btn-sm btn-success mr-1">
                        Submit</button>
                    <a href="/<%=linkPrefix%>/status/all" class="btn btn-sm btn-danger mr-1">
                        Cancel</a>
                </div>
            </div>
        </form>
        
    </div>
    